/***************************************************************************//**
* @file
*
*     This file contains definitions which are common with the ATMEL code used
*     by the Axient Charger and Distro
*
* @note    None
* @warning None
*******************************************************************************/
#ifndef DMP_ATMEL_DEFINITIONS_H
#define DMP_ATMEL_DEFINITIONS_H


/*
 * Definitions used with the DMP_USER_INTERFACE_CALIB_CONTRAST property value
 */
#define DMP_CONTRAST_BIT_INDEX_BIAS       15       //!< Bit # for the bias control bit
#define DMP_CONTRAST_BIT_INDEX_V0          8       //!< Bit # for the least significant bit of the V0 voltage field
#define DMP_CONTRAST_BIT_INDEX_CONTRAST    0       //!< Bit # for the least significant bit of the contrast setting field
#define DMP_CONTRAST_BIT_MASK_BIAS        0x01     //!< Bit Mask for the bias control bit
#define DMP_CONTRAST_BIT_MASK_V0          0x07     //!< Bit Mask for the V0 voltage field
#define DMP_CONTRAST_BIT_MASK_CONTRAST    0x3F     //!< Bit Mask for the contrast setting field

/*
 * Definitions used with the DMP_USER_INTERFACE_TEST_BUTTON_SIMULATE property value
 */
#define DMP_BUTTON_SIMULATE_UP            0        //!< Simulate a press/release of the UP button
#define DMP_BUTTON_SIMULATE_ENTER         1        //!< Simulate a press/release of the ENTER/SELECT/SET button
#define DMP_BUTTON_SIMULATE_DOWN          2        //!< Simulate a press/release of the DOWN button
#define DMP_BUTTON_SIMULATE_UTILITY       3        //!< Simulate a "Utility" button sequence (hold down both UP/DOWN buttons)
#define DMP_BUTTON_SIMULATE_DEBUG_MENU    4        //!< Simulate a "Debug Menu" button sequence


#endif // DMP_ATMEL_DEFINITIONS_H
